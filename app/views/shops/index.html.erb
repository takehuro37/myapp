<%= form_tag( shops_index_path, method: :get) do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search'%>

<% if @rests %>
  <% @rests.each do |rest|%>
    <div class = "card mb-3">
      <div class = "row no-gutters">
        <div class = "col-lg-6">
          <%= image_tag(rest["image_url"]["shop_image1"])%>
        <div class = "col-lg-6">
          <div class = "card-body">
            <%= "名前: #{rest["name"]}"%>
            <%= "カテゴリー: #{rest["category"]}"%>
            <%= "住所: #{rest["address"]}"%>

